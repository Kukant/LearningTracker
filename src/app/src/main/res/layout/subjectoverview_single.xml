<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/subsection_cardview_style"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubsectionName"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <ProgressBar
            android:id="@+id/SubProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_style"
            android:layout_width="match_parent"
            android:layout_below="@+id/tvSubsectionName"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:max="100"
            android:progress="0"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubPercentage"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/SubProgressBar"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>