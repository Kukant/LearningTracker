<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/whiteGrey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/lightGrey" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/lightGrey" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

</selector>